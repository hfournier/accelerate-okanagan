---
import Header from "@components/Header.astro"
import Hero from "@components/Hero.astro"
import Footer from "@components/Footer.astro"
import "../styles/tailwind.css"
import "../styles/fonts.css"
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Accelerate Okanagan | Technology Business Accelerator</title>
		<meta
			name="description"
			content="Access programs, coaching and mentorship to support your early-stage or growing tech business. Accelerate Okanagan can support founders of all types."
		/>
		<link rel="canonical" href={Astro.url} />
		<meta property="og:locale" content="en_US" />
		<meta property="og:type" content="website" />
		<meta property="og:title" content="Accelerate Okanagan | Technology Business Accelerator" />
		<meta
			property="og:description"
			content="Access programs, coaching and mentorship to support your early-stage or growing tech business. Accelerate Okanagan can support founders of all types."
		/>
		<meta property="og:url" content={Astro.url} />
		<meta property="og:site_name" content="Accelerate Okanagan" />
	</head>
	<body class="grid min-h-dvh grid-rows-[auto_1fr_auto] font-inter text-neutral-700">
		<Header />
		<Hero />
		<slot />
		<Footer />
	</body>
</html>
